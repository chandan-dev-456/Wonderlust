<% layout("/layouts/boilerplate") %>
<body>
    <div class="new mb-5">
    <div class="new-list col-12 ">
        <h1>Create a new Listing</h1>
        <form action="/listing" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" id="title" required>
                <div class="invalid-feedback">Please provide a Title</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" class="form-control" name="listing[description]" type="text"  placeholder="Enter your description" required></textarea>
                <div class="invalid-feedback">Please provide a Description</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input name="listing[image]" placeholder="Enter image file" type="file" class="form-control" id="image">
                <div class="invalid-feedback">Please provide an Image</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <label for="price" class="form-label">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text">&#8377;</span>
                <input id="price" name="listing[price]" placeholder="Enter price" type="text" class="form-control" aria-label="Amount (to the nearest dollar)" required>
                <span class="input-group-text">.00</span>
                <div class="invalid-feedback">Please provide a Price</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" id="location"required >
                <div class="invalid-feedback">Please provide a Location</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="Enter your country" type="text" class="form-control" id="country" required>
                <div class="invalid-feedback">Please provide Country</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <a href="/listing" class="btn btn-dark mb-3">Back</a>
            <button class="btn btn-dark mb-3">Add</button>
        </form>
    </div>
    </div>
</body>
